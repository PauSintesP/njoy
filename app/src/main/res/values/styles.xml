<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@drawable/bg_bottom_nav_float</item>
        <item name="itemIconTint">@color/nav_item_colors</item>
        <item name="itemTextColor">@color/nav_item_colors</item>
        <item name="itemRippleColor">@color/primary</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    <style name="ImageCornerRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>