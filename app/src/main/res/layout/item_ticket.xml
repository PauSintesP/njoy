<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    android:backgroundTint="@color/bg_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header degradado con logo -->
        <View
            android:id="@+id/ticket_header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_gradient"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Logo njoy en header -->
        <TextView
            android:id="@+id/tvBrandLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="njoy"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTicketLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TU ENTRADA"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.1"
            app:layout_constraintBottom_toBottomOf="@id/ticket_header"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Imagen del evento con overlay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvEventImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/ticket_header">

            <ImageView
                android:id="@+id/ivEventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_event"/>

            <!-- Gradiente sobre imagen -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_image_gradient"/>

        </androidx.cardview.widget.CardView>

        <!-- Nombre del evento sobre la imagen -->
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintBottom_toBottomOf="@id/cvEventImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Festival de Música Electrónica 2024"/>

        <!-- Contenedor principal de info -->
        <LinearLayout
            android:id="@+id/llMainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/cvEventImage">

            <!-- Fecha y hora en cards horizontales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/white"/>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="15 Jul 2024"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            app:tint="@color/white"/>

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="20:30"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Ubicación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tvVenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    tools:text="Teatro Principal, Madrid"/>

            </LinearLayout>

            <!-- Separador elegante -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_dark"
                android:layout_marginVertical="16dp"/>

            <!-- Sección QR y detalles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Info del ticket -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tvTicketCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:fontFamily="monospace"
                        tools:text="NJ-1234567"/>

                    <TextView
                        android:id="@+id/tvTicketType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="Entrada General"/>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/price_accent"
                        tools:text="20,00 €"/>

                </LinearLayout>

                <!-- Código QR -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/ivQrCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        tools:src="@drawable/ic_tickets"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Separador con texto -->
        <View
            android:id="@+id/separator_actions"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_dark"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/llMainInfo"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/separator_actions"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Botón Descargar PDF -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownloadPdf"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Descargar PDF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="12dp"/>

            <!-- Botón añadir a Google Wallet -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToWallet"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Añadir a Google Wallet"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_wallet"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/primary"
                app:iconPadding="12dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>