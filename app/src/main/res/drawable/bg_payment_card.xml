<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: Primary border, slightly lighter background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4D6200EA" /> <!-- Primary with alpha -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/primary" />
        </shape>
    </item>
    
    <!-- Default state: Glass style -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#cc2a2a2a" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#1AFFFFFF" />
        </shape>
    </item>
</selector>
